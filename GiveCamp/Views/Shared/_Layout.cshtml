<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Dallas GiveCamp</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="masthead">
            <div>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Images/GiveCampDallas_small.png" alt="Dallas GiveCamp" /></a>
            </div>
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <ul class="nav">
                            @Html.MenuLink("Home","Index","Home")
                            <li><a href="#">News</a></li>
                            <li><a href="#">Location</a></li>
                            <li><a href="#">Schedule</a></li>
                            <li><a href="#">Sponsors</a></li>
                            @Html.MenuLink("Contact","Contact","Home")
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.navbar -->
        </div>

        <div class="row">
            <div class="span10">
                <div id="body">
                    @RenderSection("featured", required: false)
                    @if (IsSectionDefined("featured"))
                    {
                        <hr />
                    }
                    <section class="content-wrapper main-content clear-fix">
                        @RenderBody()
                    </section>
                </div>
            </div>
            <div class="span2">
                @Html.Partial("_Sidebar")
            </div>
        </div>
        <hr>
        <div class="footer">
            <p>&copy; Dallas GiveCamp 2013</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/site.js")
    @RenderSection("scripts", required: false)
    @Html.RenderScripts()
</body>
</html>
