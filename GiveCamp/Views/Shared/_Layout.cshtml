<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Dallas GiveCamp</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="masthead">
            <div>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Images/GiveCampDallas_small.png" alt="Dallas GiveCamp" /></a>
            </div>
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <ul class="nav">
                            @Html.MenuLink("Home", "Index", "Home")
                            @Html.MenuLink("News", "News", "Home")
                            @Html.MenuLink("Location", "Location", "Home")
                            @Html.MenuLink("Schedule", "Schedule", "Home")
                            @Html.MenuLink("Sponsors", "Sponsors", "Home")
                            @Html.MenuLink("Contact", "Contact", "Home")
                            @if (Request.IsAuthenticated)
                            {
                                @Html.MenuLink("Account", "Manage", "Account")
                                @Html.MenuLink("Log Off", "LogOff", "Account")
                            }
                            else
                            {
                                @Html.MenuLink("Log in", "Login", "Account")
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.navbar -->
        </div>

        <div class="row">
            <div class="span10">
                <div id="body">
                    @RenderSection("featured", required: false)
                    @if (IsSectionDefined("featured"))
                    {
                        <hr />
                    }
                    <section class="content-wrapper main-content clear-fix">
                        @if (!string.IsNullOrWhiteSpace(ViewBag.AlertSuccess))
                        { 
                            <div class="alert alert-success">
                                @ViewBag.AlertSuccess
                                <a class="close" data-dismiss="alert" href="#">&times;</a>
                            </div>
                        }
                        @RenderBody()
                    </section>
                </div>
            </div>
            <div class="span2">
                @Html.Partial("_Sidebar")
            </div>
        </div>
        <hr>
        <div class="footer">
            <p>&copy; Dallas GiveCamp 2013</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Html.RenderScripts()
</body>
</html>
